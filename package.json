    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "1.1.8",
    "babel-preset-es2015": "^6.22.0",
    "babili-webpack-plugin": "0.0.10",
    "colors": "^1.1.2",
    "connect": "^3.5.0",
    "eslint": "^3.15.0",
    "express": "^4.14.1",
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.1",
    "gulp-connect": "~5.0.0",
    "gulp-documentation": "fchasen/gulp-documentation",
    "gulp-jshint": "^2.0.4",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-size": "^2.1.0",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-uglify": "^2.0.1",
    "gulp-util": "^3.0.8",
    "jquery": "^3.1.1",
    "jshint": "^2.9.4",
    "karma": "^1.4.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "mocha-loader": "^1.1.0",
    "morgan": "^1.8.0",
    "optimist": "^0.6.1",
    "portfinder": "^1.0.13",
    "raw-loader": "^0.5.1",
    "serve-static": "^1.11.2",
