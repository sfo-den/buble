    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "webpack": "^v2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-dev-server": "^v2.3.0"
  },
  "dependencies": {
    "event-emitter": "^0.3.4",
    "jszip": "^3.1.3",
    "marks-pane": "^1.0.0",
    "path-webpack": "^0.0.3",
    "stream-browserify": "^2.0.1",
    "xmldom": "0.1.27"
  }
